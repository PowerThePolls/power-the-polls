</div>

<script src="https://ptp.actionkit.com/samples/widget.js"></script>

<script>
function onWidgetSubmit(form) {
  document.body.classList.add('body--submitted');
  $("html, body").animate({
    scrollTop: $('#signup-replacement').offset().top
  }, 800);
  gtag('event', 'signup', {'event_category' : 'signup','event_label' : '{{ source }}{{^source}}Homepage{{/source}}'});
  fbq('track', 'CompleteRegistration');
}
</script>

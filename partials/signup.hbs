<form class="action_form actionkit-widget" name="signup" action="https://ptp.actionkit.com/act/" onsubmit="this.submitted=1; return false">

  <input type="hidden" name="source" id="id_source" value="{{ source }}">

    <div id="ak-fieldbox-name" class="required">
      <label for="id_name">
        Name<span class="ak-required-flag">*</span>
        <input type="text" required name="name" id="id_name" class="ak-userfield-input">
      </label>
    </div>

    <div id="ak-fieldbox-email" class="required">
      <label for="id_email">
        Email address<span class="ak-required-flag">*</span>
        <input type="email" required name="email" id="id_email" class="ak-userfield-input">
      </label>
    </div>

    {{#if partner_field }}
      <div id="ak-fieldbox-partner-field" class="required">
        <label for="id_partner-field">
          {{ partner_field }}*
          <input type="text" required name="user_partner_field" id="id_partner-field" class="ak-userfield-input">
        </label>
      </div>
    {{/if}}

